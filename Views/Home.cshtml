@using DareTechnicalTest.Constants
@model DareTechnicalTest.Models.ViewModels.HomePageViewModel

<div class="homepage-container text-center">
    <h1>@Model.Header</h1>

    <p>@Model.PageDescription</p>

    <button type="button" class="btn btn-primary refresh-video-list-btn">@Model.PlaylistRefreshButtonText</button>

    <div class="playlist-container">
        @Html.Partial("_playListItems", Model.PlaylistVideos)
    </div>
</div>

<script type="text/javascript" src="../Js/HomePageController.js"></script>
<script type="text/javascript">
    homePageController.initialize({
        playlist: '@Model.Playlist',
        numberOfPlaylistItems: '@Model.PlaylistVideos.Count'
    });
</script>